{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2016"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": false,
    "noEmitOnError": true,
    "pretty": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/*"
  ]
}
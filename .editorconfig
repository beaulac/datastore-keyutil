root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js}]
indent_style = space
indent_size = 4
spaces_around_operators = true
spaces_around_brackets = true
curly_bracket_next_line = false

[*.{json}]
indent_style = space
indent_size = 2
